import React, { useState, useRef, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Send, Gift, Loader2, ChevronDown, Sparkles, RotateCcw } from 'lucide-react';
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { base44 } from '@/api/base44Client';

import ChatMessage from '@/components/gift/ChatMessage';
import GiftCard from '@/components/gift/GiftCard';
import BudgetSlider from '@/components/gift/BudgetSlider';
import PhotoUpload from '@/components/gift/PhotoUpload';
import InterestTags from '@/components/gift/InterestTags';
import ThemeToggle from '@/components/gift/ThemeToggle';
import { useTheme } from '@/Layout';

const steps = {
  GREETING: 'greeting',
  NAME: 'name',
  AGE: 'age',
  GENDER: 'gender',
  INTERESTS: 'interests',
  PHOTOS: 'photos',
  BUDGET: 'budget',
  GENERATING: 'generating',
  RESULTS: 'results'
};

export default function Home() {
  const { isDark, toggleTheme } = useTheme();
  const [currentStep, setCurrentStep] = useState(steps.GREETING);
  const [messages, setMessages] = useState([]);
  const [inputValue, setInputValue] = useState('');
  const [isTyping, setIsTyping] = useState(false);
  const [isUploading, setIsUploading] = useState(false);
  
  const [formData, setFormData] = useState({
    recipientName: '',
    age: '',
    gender: '',
    interests: [],
    photos: [],
    budgetMin: 2000,
    budgetMax: 10000
  });
  
  const [gifts, setGifts] = useState([]);
  const messagesEndRef = useRef(null);
  const chatContainerRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages, currentStep]);

  useEffect(() => {
    setTimeout(() => {
      addBotMessage('–ü—Ä–∏–≤–µ—Ç! üéÅ –Ø –ø–æ–º–æ–≥—É –ø–æ–¥–æ–±—Ä–∞—Ç—å –∏–¥–µ–∞–ª—å–Ω—ã–π –ø–æ–¥–∞—Ä–æ–∫. –î–∞–≤–∞–π –Ω–∞—á–Ω—ë–º!\n\n–ö–∞–∫ –∑–æ–≤—É—Ç –∏–º–µ–Ω–∏–Ω–Ω–∏–∫–∞?');
      setCurrentStep(steps.NAME);
    }, 500);
  }, []);

  const addBotMessage = (text) => {
    setMessages(prev => [...prev, { text, isBot: true }]);
  };

  const addUserMessage = (text) => {
    setMessages(prev => [...prev, { text, isBot: false }]);
  };

  const handleSendMessage = () => {
    if (!inputValue.trim()) return;
    
    const value = inputValue.trim();
    addUserMessage(value);
    setInputValue('');

    if (currentStep === steps.NAME) {
      setFormData(prev => ({ ...prev, recipientName: value }));
      setIsTyping(true);
      setTimeout(() => {
        setIsTyping(false);
        addBotMessage(`–û—Ç–ª–∏—á–Ω–æ! –ì–æ—Ç–æ–≤–ª—é –ø–æ–¥–∞—Ä–æ–∫ –¥–ª—è ${value} ‚ú®\n\n–°–∫–æ–ª—å–∫–æ –ª–µ—Ç –∏—Å–ø–æ–ª–Ω—è–µ—Ç—Å—è?`);
        setCurrentStep(steps.AGE);
      }, 800);
    } else if (currentStep === steps.AGE) {
      setFormData(prev => ({ ...prev, age: value }));
      setIsTyping(true);
      setTimeout(() => {
        setIsTyping(false);
        addBotMessage('–ü–æ–Ω—è–ª! –ê —Ç–µ–ø–µ—Ä—å –≤—ã–±–µ—Ä–∏ –ø–æ–ª:');
        setCurrentStep(steps.GENDER);
      }, 600);
    }
  };

  const handleGenderSelect = (gender) => {
    const genderText = gender === 'male' ? '–ú—É–∂—á–∏–Ω–∞' : gender === 'female' ? '–ñ–µ–Ω—â–∏–Ω–∞' : '–î—Ä—É–≥–æ–µ';
    addUserMessage(genderText);
    setFormData(prev => ({ ...prev, gender }));
    setIsTyping(true);
    setTimeout(() => {
      setIsTyping(false);
      addBotMessage('–°—É–ø–µ—Ä! –¢–µ–ø–µ—Ä—å —Ä–∞—Å—Å–∫–∞–∂–∏ –æ–± –∏–Ω—Ç–µ—Ä–µ—Å–∞—Ö –∏ —Ö–æ–±–±–∏ –∏–º–µ–Ω–∏–Ω–Ω–∏–∫–∞ üéØ');
      setCurrentStep(steps.INTERESTS);
    }, 600);
  };

  const handleInterestsNext = () => {
    if (formData.interests.length === 0) return;
    addUserMessage(`–ò–Ω—Ç–µ—Ä–µ—Å—ã: ${formData.interests.join(', ')}`);
    setIsTyping(true);
    setTimeout(() => {
      setIsTyping(false);
      addBotMessage('–ï—Å–ª–∏ –µ—Å—Ç—å —Ñ–æ—Ç–æ —É–≤–ª–µ—á–µ–Ω–∏–π –∏–ª–∏ —Ö–æ–±–±–∏ ‚Äî –∑–∞–≥—Ä—É–∑–∏ –∏—Ö! –≠—Ç–æ –ø–æ–º–æ–∂–µ—Ç –ø–æ–¥–æ–±—Ä–∞—Ç—å –±–æ–ª–µ–µ —Ç–æ—á–Ω—ã–µ –∏–¥–µ–∏ üì∏\n\n–ú–æ–∂–µ—à—å –ø—Ä–æ–ø—É—Å—Ç–∏—Ç—å —ç—Ç–æ—Ç —à–∞–≥.');
      setCurrentStep(steps.PHOTOS);
    }, 600);
  };

  const handlePhotosNext = () => {
    if (formData.photos.length > 0) {
      addUserMessage(`–ó–∞–≥—Ä—É–∂–µ–Ω–æ —Ñ–æ—Ç–æ: ${formData.photos.length}`);
    } else {
      addUserMessage('–ü—Ä–æ–ø—É—Å–∫–∞—é –∑–∞–≥—Ä—É–∑–∫—É —Ñ–æ—Ç–æ');
    }
    setIsTyping(true);
    setTimeout(() => {
      setIsTyping(false);
      addBotMessage('–û—Ç–ª–∏—á–Ω–æ! –ü–æ—Å–ª–µ–¥–Ω–∏–π —à–∞–≥ ‚Äî –≤—ã–±–µ—Ä–∏ –±—é–¥–∂–µ—Ç –Ω–∞ –ø–æ–¥–∞—Ä–æ–∫ üí∞');
      setCurrentStep(steps.BUDGET);
    }, 600);
  };

  const handleBudgetNext = async () => {
    const formatPrice = (v) => new Intl.NumberFormat('ru-RU').format(v) + ' ‚ÇΩ';
    addUserMessage(`–ë—é–¥–∂–µ—Ç: ${formatPrice(formData.budgetMin)} ‚Äî ${formatPrice(formData.budgetMax)}`);
    
    setIsTyping(true);
    setTimeout(() => {
      setIsTyping(false);
      addBotMessage('–ì–µ–Ω–µ—Ä–∏—Ä—É—é –∏–¥–µ–∏ –ø–æ–¥–∞—Ä–∫–æ–≤... –≠—Ç–æ –∑–∞–π–º—ë—Ç –Ω–µ—Å–∫–æ–ª—å–∫–æ —Å–µ–∫—É–Ω–¥ ‚ú®');
      setCurrentStep(steps.GENERATING);
      generateGifts();
    }, 600);
  };

  const generateGifts = async () => {
    const prompt = `–¢—ã —ç–∫—Å–ø–µ—Ä—Ç –ø–æ –ø–æ–¥–∞—Ä–∫–∞–º. –ü–æ–¥–±–µ—Ä–∏ 5 –∏–¥–µ–π –ø–æ–¥–∞—Ä–∫–æ–≤ –Ω–∞ –æ—Å–Ω–æ–≤–µ –¥–∞–Ω–Ω—ã—Ö:
    
–ò–º—è: ${formData.recipientName}
–í–æ–∑—Ä–∞—Å—Ç: ${formData.age} –ª–µ—Ç
–ü–æ–ª: ${formData.gender === 'male' ? '–º—É–∂—Å–∫–æ–π' : formData.gender === 'female' ? '–∂–µ–Ω—Å–∫–∏–π' : '–Ω–µ —É–∫–∞–∑–∞–Ω'}
–ò–Ω—Ç–µ—Ä–µ—Å—ã: ${formData.interests.join(', ')}
–ë—é–¥–∂–µ—Ç: –æ—Ç ${formData.budgetMin} –¥–æ ${formData.budgetMax} —Ä—É–±–ª–µ–π
${formData.photos.length > 0 ? '–¢–∞–∫–∂–µ —É—á—Ç–∏ –∑–∞–≥—Ä—É–∂–µ–Ω–Ω—ã–µ —Ñ–æ—Ç–æ —É–≤–ª–µ—á–µ–Ω–∏–π.' : ''}

–î–ª—è –∫–∞–∂–¥–æ–≥–æ –ø–æ–¥–∞—Ä–∫–∞ –¥–∞–π:
- –ù–∞–∑–≤–∞–Ω–∏–µ (name)
- –ö—Ä–∞—Ç–∫–æ–µ –æ–ø–∏—Å–∞–Ω–∏–µ (description) - –ø–æ—á–µ–º—É —ç—Ç–æ —Ö–æ—Ä–æ—à–∏–π –≤—ã–±–æ—Ä
- –ü—Ä–∏–º–µ—Ä–Ω—É—é —Ü–µ–Ω—É –≤ —Ä—É–±–ª—è—Ö (price_range)
- –ö–∞—Ç–µ–≥–æ—Ä–∏—é —Ç–æ–≤–∞—Ä–∞ (category) - –æ–¥–Ω–∞ –∏–∑: luxury, music, gaming, books, photo, art, sport, food, travel, accessories, fashion, love, special, default
- available_in_marketplaces (boolean) - false –µ—Å–ª–∏ —ç—Ç–æ –ø–æ–¥–∞—Ä–æ—á–Ω—ã–π —Å–µ—Ä—Ç–∏—Ñ–∏–∫–∞—Ç, –≤–ø–µ—á–∞—Ç–ª–µ–Ω–∏–µ, —É—Å–ª—É–≥–∞ –∏–ª–∏ —á—Ç–æ-—Ç–æ —á—Ç–æ –Ω–µ–ª—å–∑—è –∫—É–ø–∏—Ç—å –≤ –º–∞—Ä–∫–µ—Ç–ø–ª–µ–π—Å–µ
- –ï—Å–ª–∏ available_in_marketplaces=true, –¥–æ–±–∞–≤—å —Å—Å—ã–ª–∫–∏:
  - ozon_link: https://www.ozon.ru/search/?text=–Ω–∞–∑–≤–∞–Ω–∏–µ+—Ç–æ–≤–∞—Ä–∞
  - wildberries_link: https://www.wildberries.ru/catalog/0/search.aspx?search=–Ω–∞–∑–≤–∞–Ω–∏–µ+—Ç–æ–≤–∞—Ä–∞  
  - yandex_market_link: https://market.yandex.ru/search?text=–Ω–∞–∑–≤–∞–Ω–∏–µ+—Ç–æ–≤–∞—Ä–∞

–í–∞–∂–Ω–æ: –ø–æ–¥–±–∏—Ä–∞–π —Ä–∞–∑–Ω–æ–æ–±—Ä–∞–∑–Ω—ã–µ, –∫—Ä–µ–∞—Ç–∏–≤–Ω—ã–µ –∏ –ø–µ—Ä—Å–æ–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –∏–¥–µ–∏. –î–ª—è –ø–æ–¥–∞—Ä–æ—á–Ω—ã—Ö —Å–µ—Ä—Ç–∏—Ñ–∏–∫–∞—Ç–æ–≤, –≤–ø–µ—á–∞—Ç–ª–µ–Ω–∏–π, –º–∞—Å—Ç–µ—Ä-–∫–ª–∞—Å—Å–æ–≤ –∏ —É—Å–ª—É–≥ —Å—Ç–∞–≤—å available_in_marketplaces=false.`;

    try {
      const result = await base44.integrations.Core.InvokeLLM({
        prompt,
        file_urls: formData.photos.length > 0 ? formData.photos : undefined,
        response_json_schema: {
          type: "object",
          properties: {
            gifts: {
              type: "array",
              items: {
                type: "object",
                properties: {
                  name: { type: "string" },
                  description: { type: "string" },
                  price_range: { type: "string" },
                  category: { type: "string" },
                  available_in_marketplaces: { type: "boolean" },
                  ozon_link: { type: "string" },
                  wildberries_link: { type: "string" },
                  yandex_market_link: { type: "string" }
                }
              }
            }
          }
        }
      });

      const generatedGifts = result.gifts || [];
      
      // Use gift images from the LLM response (already includes image_url from internet search)
      const giftsWithImages = generatedGifts;

      setGifts(giftsWithImages);
      addBotMessage(`–ì–æ—Ç–æ–≤–æ! –ù–∞—à—ë–ª ${giftsWithImages.length} –∏–¥–µ–π –ø–æ–¥–∞—Ä–∫–æ–≤ –¥–ª—è ${formData.recipientName} üéâ`);
      setCurrentStep(steps.RESULTS);

      // Save to database
      await base44.entities.GiftSearch.create({
        recipient_name: formData.recipientName,
        age: parseInt(formData.age) || 0,
        gender: formData.gender,
        interests: formData.interests,
        budget_min: formData.budgetMin,
        budget_max: formData.budgetMax,
        photo_urls: formData.photos,
        generated_gifts: giftsWithImages
      });

    } catch (error) {
      console.error('Error generating gifts:', error);
      addBotMessage('–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏. –ü–æ–ø—Ä–æ–±—É–π –µ—â—ë —Ä–∞–∑!');
      setCurrentStep(steps.BUDGET);
    }
  };

  const resetChat = () => {
    setMessages([]);
    setCurrentStep(steps.GREETING);
    setFormData({
      recipientName: '',
      age: '',
      gender: '',
      interests: [],
      photos: [],
      budgetMin: 2000,
      budgetMax: 10000
    });
    setGifts([]);
    
    setTimeout(() => {
      addBotMessage('–ü—Ä–∏–≤–µ—Ç! üéÅ –Ø –ø–æ–º–æ–≥—É –ø–æ–¥–æ–±—Ä–∞—Ç—å –∏–¥–µ–∞–ª—å–Ω—ã–π –ø–æ–¥–∞—Ä–æ–∫. –î–∞–≤–∞–π –Ω–∞—á–Ω—ë–º!\n\n–ö–∞–∫ –∑–æ–≤—É—Ç –∏–º–µ–Ω–∏–Ω–Ω–∏–∫–∞?');
      setCurrentStep(steps.NAME);
    }, 500);
  };

  return (
    <div className={`min-h-screen transition-colors duration-500 ${isDark ? 'bg-gradient-to-br from-[#0f0a1a] via-[#1a0a1a] to-[#1a0a12]' : 'bg-gradient-to-br from-violet-50 via-fuchsia-50 to-rose-50'}`}>
      {/* Header */}
      <motion.header
        initial={{ opacity: 0, y: -20 }}
        animate={{ opacity: 1, y: 0 }}
        className={`sticky top-0 z-50 backdrop-blur-xl border-b shadow-sm transition-colors duration-500 ${isDark ? 'bg-[#1a1025]/90 border-[#3b2d4d]' : 'bg-white/80 border-gray-100'}`}
      >
        <div className="max-w-2xl mx-auto px-4 py-4 flex items-center justify-between">
          <div className="flex items-center gap-3">
            <div className={`w-10 h-10 rounded-2xl bg-gradient-to-br from-violet-500 to-fuchsia-500 flex items-center justify-center shadow-lg ${isDark ? 'shadow-violet-900/50' : 'shadow-violet-200'}`}>
              <Gift className="w-5 h-5 text-white" />
            </div>
            <div>
              <h1 className={`font-bold ${isDark ? 'text-white' : 'text-gray-900'}`}>Idea4Gift</h1>
              <p className={`text-xs ${isDark ? 'text-violet-300' : 'text-gray-500'}`}>–£–º–Ω—ã–π –ø–æ–¥–±–æ—Ä –ø–æ–¥–∞—Ä–∫–æ–≤</p>
            </div>
          </div>
          
          <div className="flex items-center gap-2">
            <ThemeToggle isDark={isDark} onToggle={toggleTheme} />
            
            {currentStep !== steps.GREETING && (
              <Button
                variant="ghost"
                size="sm"
                onClick={resetChat}
                className={`${isDark ? 'text-violet-300 hover:text-violet-200' : 'text-gray-500 hover:text-violet-600'}`}
              >
                <RotateCcw className="w-4 h-4 mr-2" />
                –°–Ω–∞—á–∞–ª–∞
              </Button>
            )}
          </div>
        </div>
      </motion.header>

      {/* Chat Container */}
      <div 
        ref={chatContainerRef}
        className="max-w-2xl mx-auto px-4 pb-32 overflow-x-hidden"
      >
        <div className="py-6 space-y-4">
          <AnimatePresence mode="popLayout">
            {messages.map((msg, i) => (
              <ChatMessage key={i} message={msg.text} isBot={msg.isBot} isDark={isDark} />
            ))}
          </AnimatePresence>

          {isTyping && (
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              className="flex items-center gap-2 text-gray-400"
            >
              <div className="flex gap-1">
                <span className="w-2 h-2 rounded-full bg-violet-400 animate-bounce" style={{ animationDelay: '0ms' }} />
                <span className="w-2 h-2 rounded-full bg-violet-400 animate-bounce" style={{ animationDelay: '150ms' }} />
                <span className="w-2 h-2 rounded-full bg-violet-400 animate-bounce" style={{ animationDelay: '300ms' }} />
              </div>
            </motion.div>
          )}

          {/* Gender Selection */}
          {currentStep === steps.GENDER && (
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              className="flex gap-3 flex-wrap"
            >
              {[
                { value: 'male', label: 'üë® –ú—É–∂—á–∏–Ω–∞', color: 'from-blue-400 to-indigo-500' },
                { value: 'female', label: 'üë© –ñ–µ–Ω—â–∏–Ω–∞', color: 'from-pink-400 to-rose-500' },
                { value: 'other', label: 'üåü –î—Ä—É–≥–æ–µ', color: 'from-violet-400 to-fuchsia-500' }
              ].map((option) => (
                <Button
                  key={option.value}
                  onClick={() => handleGenderSelect(option.value)}
                  className={`flex-1 min-w-[100px] bg-gradient-to-r ${option.color} text-white border-0 shadow-lg hover:opacity-90 transition-opacity rounded-2xl h-12`}
                >
                  {option.label}
                </Button>
              ))}
            </motion.div>
          )}

          {/* Interests Selection */}
          {currentStep === steps.INTERESTS && (
            <div className="space-y-4">
              <InterestTags
                interests={formData.interests}
                onInterestsChange={(interests) => setFormData(prev => ({ ...prev, interests }))}
                isDark={isDark}
              />
              <Button
                onClick={handleInterestsNext}
                disabled={formData.interests.length === 0}
                className="w-full bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white rounded-2xl h-12 shadow-lg shadow-violet-200 hover:opacity-90 transition-opacity"
              >
                <Sparkles className="w-4 h-4 mr-2" />
                –ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å
              </Button>
            </div>
          )}

          {/* Photo Upload */}
          {currentStep === steps.PHOTOS && (
            <div className="space-y-4">
              <PhotoUpload
                photos={formData.photos}
                onPhotosChange={(photos) => setFormData(prev => ({ ...prev, photos }))}
                isUploading={isUploading}
                setIsUploading={setIsUploading}
                isDark={isDark}
              />
              <Button
                onClick={handlePhotosNext}
                disabled={isUploading}
                className="w-full bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white rounded-2xl h-12 shadow-lg shadow-violet-200 hover:opacity-90 transition-opacity"
              >
                {formData.photos.length > 0 ? '–ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å' : '–ü—Ä–æ–ø—É—Å—Ç–∏—Ç—å'}
              </Button>
            </div>
          )}

          {/* Budget Selection */}
          {currentStep === steps.BUDGET && (
            <div className="space-y-4">
              <BudgetSlider
                min={formData.budgetMin}
                max={formData.budgetMax}
                onMinChange={(v) => setFormData(prev => ({ ...prev, budgetMin: v }))}
                onMaxChange={(v) => setFormData(prev => ({ ...prev, budgetMax: v }))}
                isDark={isDark}
              />
              <Button
                onClick={handleBudgetNext}
                className="w-full bg-gradient-to-r from-violet-500 to-fuchsia-500 text-white rounded-2xl h-12 shadow-lg shadow-violet-200 hover:opacity-90 transition-opacity"
              >
                <Gift className="w-4 h-4 mr-2" />
                –ù–∞–π—Ç–∏ –ø–æ–¥–∞—Ä–∫–∏
              </Button>
            </div>
          )}

          {/* Generating Animation */}
          {currentStep === steps.GENERATING && (
            <motion.div
              initial={{ opacity: 0 }}
              animate={{ opacity: 1 }}
              className="flex flex-col items-center py-8"
            >
              <div className="relative">
                <div className="w-20 h-20 rounded-full bg-gradient-to-r from-violet-500 to-fuchsia-500 animate-pulse" />
                <Gift className="w-8 h-8 text-white absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2" />
              </div>
              <p className={`mt-4 font-medium ${isDark ? 'text-violet-300' : 'text-gray-600'}`}>–ü–æ–¥–±–∏—Ä–∞—é –∏–¥–µ–∏...</p>
            </motion.div>
          )}

          {/* Gift Results */}
          {currentStep === steps.RESULTS && gifts.length > 0 && (
            <div>
              <motion.div
                initial={{ opacity: 0 }}
                animate={{ opacity: 1 }}
                className="grid grid-cols-2 gap-2"
              >
                {gifts.map((gift, i) => (
                  <GiftCard key={i} gift={gift} index={i} isDark={isDark} />
                ))}
              </motion.div>
              
              <motion.div
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 0.5 }}
                className="text-center py-6"
              >
                <Button
                  onClick={resetChat}
                  variant="outline"
                  className={`rounded-2xl border-2 ${isDark ? 'border-violet-700 text-violet-300 hover:bg-violet-900/30' : 'border-violet-200 text-violet-600 hover:bg-violet-50'}`}
                >
                  <RotateCcw className="w-4 h-4 mr-2" />
                  –ü–æ–¥–æ–±—Ä–∞—Ç—å –µ—â—ë –ø–æ–¥–∞—Ä–∫–∏
                </Button>
              </motion.div>
            </div>
          )}
          
          <div ref={messagesEndRef} />
        </div>
      </div>

      {/* Input Area */}
      {(currentStep === steps.NAME || currentStep === steps.AGE) && (
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className={`fixed bottom-0 left-0 right-0 backdrop-blur-xl border-t p-4 transition-colors duration-500 ${isDark ? 'bg-[#1a1025]/90 border-[#3b2d4d]' : 'bg-white/90 border-gray-100'}`}
        >
          <div className="max-w-2xl mx-auto flex gap-3">
            <Input
              value={inputValue}
              onChange={(e) => setInputValue(e.target.value)}
              onKeyDown={(e) => e.key === 'Enter' && handleSendMessage()}
              placeholder={currentStep === steps.NAME ? '–í–≤–µ–¥–∏—Ç–µ –∏–º—è...' : '–í–≤–µ–¥–∏—Ç–µ –≤–æ–∑—Ä–∞—Å—Ç...'}
              className={`flex-1 rounded-2xl h-12 px-5 transition-colors duration-500 ${isDark ? 'bg-[#241830] border-[#3b2d4d] text-white placeholder:text-violet-400 focus:border-violet-500' : 'border-gray-200 focus:border-violet-300'}`}
            />
            <Button
              onClick={handleSendMessage}
              disabled={!inputValue.trim()}
              className={`w-12 h-12 rounded-2xl bg-gradient-to-r from-violet-500 to-fuchsia-500 shadow-lg hover:opacity-90 transition-opacity ${isDark ? 'shadow-violet-900/50' : 'shadow-violet-200'}`}
            >
              <Send className="w-5 h-5" />
            </Button>
          </div>
        </motion.div>
      )}
    </div>
  );
}
